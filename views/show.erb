<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirates.name %></h3>
  <h3>Weight: <%= @pirates.weight %></h3>
  <h3>Height: <%= @pirates.height %></h3>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
